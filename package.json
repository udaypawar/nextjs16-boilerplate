{
  "name": "boilerplate",
  "packageManager": "yarn@4.10.3",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "root:tsc": "yarn workspaces foreach --topological --all run tsc --build",
    "local:dev": "yarn workspace web dev",
    "local:build": "yarn workspace web build",
    "local:start": "yarn workspace web start",
    "local:clean": "find . \\( -name 'node_modules' -o -name 'dist' -o -name '.next' -o -name '.turbo' \\) -type d -prune -exec rm -rf '{}' +",
    "prod:build": "yarn workspace web build",
    "prod:start": "yarn workspace web start",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css,scss,html}\" --ignore-path .prettierignore"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "typescript": "^5.9.3"
  }
}
